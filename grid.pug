doctype
html(lang="es-ES")
	head
		title Framework
		meta(charset:utf-8)
		link(href="css/grid.css" rel="stylesheet")
		link(href="css/colors.css" rel="stylesheet")
		link(href="css/components.css" rel="stylesheet")
		link(href="css/Roboto.css" rel="stylesheet")
		link(href="css/MaterialIcons.css" rel="stylesheet")
	body(StickyFooter)
		header(color="bg:BlueGrey") HEADER
		main
			div(grid="gutters")
				div(cell="3:offset") auto - offset:1/3
				div(cell) auto
			div(grid="gutters")
				div(cell="3") 1/3
				div(cell) auto
			div(grid="gutters 3")
				div(cell) auto
				div(cell="flex") flex
			br
			div(grid="gutters")
				div(cell) auto
				div(cell="4") 1/4
			div(grid="gutters")
				div(cell="4") 1/4
				div(cell) auto
				div(cell="4") 1/4
			div(grid="gutters")
				div(cell="4") 1/4
				div(cell) auto
			br
			div(grid="gutters")
				div(cell="5") 1/5
				div(cell) auto
				div(cell="5") 1/5
			div(grid="gutters 5")
				div(cell="5:offset") auto - offset:1/5
				div(cell) auto
				div(cell) auto
		footer(color="bg:BlueGrey") FOOTER
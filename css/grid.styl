*{user-select: none;-moz-user-select: none;}
body>header{z-index:1;}
body>header>h1{font-size:1.5em; margin: 1em auto 0 auto; width: 90%;}
body>header>h2{font-size:3em; margin: 0 auto .25em auto; width: 90%;}
//html,body {min-height: 100%;}
body {min-height: 100vh;}

[flex]						{display: flex; list-style: none; margin: 0; padding: 0;}
[flex~="inline"]			{display: inline-flex;}

/* default: row */
[flex~="row:rerverse"]		{flex-direction: row-rerverse;}
[flex~="column"]			{flex-direction: column;}
[flex~="column:rerverse"]	{flex-direction: column-rerverse;}

/* default: nowrap */
[flex~="wrap"]				{flex-wrap: wrap;}
[flex~="wrap:reverse"]		{flex-wrap: reverse-wrap;}

/* default: flex-start */
[flex~="justify:end"]		{justify-content: flex-end;}
[flex~="justify:center"]	{justify-content: center;}
[flex~="justify:between"]	{justify-content: space-between;}
[flex~="justify:around"]	{justify-content: space-around;}

[flex~="align:start"]		{align-content: flex-start;}
[flex~="align:end"]			{align-content: flex-end;}
[flex~="align:center"]		{align-content: center;}
[flex~="align:between"]		{align-content: space-between;}
[flex~="align:around"]		{align-content: space-around;}
/* default: stretch */

[flex~="items:start"]		{align-items: flex-start;}
[flex~="items:end"]			{align-items: flex-end;}
[flex~="items:center"]		{align-items: center;}
[flex~="items:baseline"]	{align-items: baseline;}
/* default: stretch */

[item~="self:start"]		{align-self: flex-start}
[item~="self:end"]			{align-self: flex-end}
[item~="self:center"]		{align-self: center}
[item~="self:baseline"]		{align-self: baseline}
/* default: stretch */

[item~="order:-2"]			{order: -2}
[item~="order:-1"]			{order: -1}
[item~="order:1"]			{order: 1}
[item~="order:2"]			{order: 2}

[flex~="gutters"]			{margin: -.5em;}
[flex~="gutters"]>*			{padding: .5em;}

[item~="margin"]			{margin: auto}
[item~="margin:left"]		{margin-left: auto}
[item~="margin:right"]		{margin-right: auto}

/* basis: 0 = white ~ auto = spaces */
/* grow: multiplique ~ shrink: divide */
/* grow: 0 ~ shrink: 1 ~ basis: auto */
/* flex: grow ~ basis ~ grow basis ~ grow shrink ~ grow shrink basis */
/* flex: 0 auto = 0 1 auto = initial ~ auto = 1 1 auto ~ none = 0 0 auto */
[flex~="0"]>*,[item~="0"]					{flex: 0;}
[flex~="1"]>*,[item~="1"]					{flex: 1;}
[flex~="2"]>*,[item~="2"]					{flex: 2;}
[flex~="3"]>*,[item~="3"]					{flex: 3;}
[flex~="4"]>*,[item~="4"]					{flex: 4;}
[flex~="shrink:0"]>*,[item~="shrink:0"]		{flex-shrink: 0;}
[flex~="shrink:1"]>*,[item~="shrink:1"]		{flex-shrink: 1;}
[flex~="shrink:2"]>*,[item~="shrink:2"]		{flex-shrink: 2;}
[flex~="shrink:3"]>*,[item~="shrink:3"]		{flex-shrink: 3;}
[flex~="shrink:4"]>*,[item~="shrink:4"]		{flex-shrink: 4;}
[flex~="grow:0"]>*,[item~="grow:0"]			{flex-grow: 0;}
[flex~="grow:1"]>*,[item~="grow:1"]			{flex-grow: 1;}
[flex~="grow:2"]>*,[item~="grow:2"]			{flex-grow: 2;}
[flex~="grow:3"]>*,[item~="grow:3"]			{flex-grow: 3;}
[flex~="grow:4"]>*,[item~="grow:4"]			{flex-grow: 4;}
[flex~="1:1"]>*,[item~="1:1"]				{flex: 0 0 100%;}
[flex~="1:2"]>*,[item~="1:2"]				{flex: 0 0 50%;}
[flex~="1:3"]>*,[item~="1:3"]				{flex: 0 0 33.3333%;}
[flex~="1:4"]>*,[item~="1:4"]				{flex: 0 0 25%;}
[flex~="1:5"]>*,[item~="1:5"]				{flex: 0 0 20%;}

[columns]>*		{width: 19em; margin: .5em;}
[columns] 		{margin:     auto;}
[columns~="1"]	{max-width:  20em;}
[columns~="2"]	{max-width:  40em;}
[columns~="3"]	{max-width:  60em;}
[columns~="4"]	{max-width:  80em;}
[columns~="5"]	{max-width: 100em;}
[columns~="6"]	{max-width: 120em;}
[columns~="7"]	{max-width: 140em;}

/* <main style="columns: 20em 5;"></main> */

@media screen and (max-width: 670px) {
	main[item]{flex: 100%; order: 1;}
	aside[item]{flex: 0 0 50%;}
}
@media screen and (max-width: 480px) {
	main[item]{flex: 100%; order: 1;}
	aside[item]{flex: 0 0 100%;}
}
aside{text-align: center;}
aside:empty{display: none;}
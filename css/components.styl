body
	font-family Roboto,sans-serif

[StickyFooter]
	display flex
	&,/html
		height 100%
		margin 0
	flex-direction column
	&>header,&>footer
		flex none
		line-height 3em
		padding 0 1em
		text-align center
	main
		flex 1

[buttons]
	display inline-flex
	&>*:not(:first-child)
		border-top-left-radius 0
		border-bottom-left-radius 0
	&>*:not(:last-child)
		border-top-right-radius 0
		border-bottom-right-radius 0
	
[buttons~="full"]
	display flex
	&>a,&>button
		justify-content center
		flex 1 1 auto

a,button,[input]
	font 1em/2em Roboto
	display flex
	align-items center
	padding 0 .5em
	border 0
	text-decoration none
	text-transform uppercase
	&:before
		content attr(before)
		padding-right .25em
	&:after
		content attr(after)
		padding-left .25em
	&:before,&:after
		font-family 'Material Icons'
		font-size 1.3em
		text-transform lowercase

[input]
	display flex
	align-items center
	line-height 2em
	border 1px solid grey
	border-radius 25em	
	input
		border inherit
		border-width 0 1px 0 1px
		//background-color transparent
		line-height inherit
		padding 0 .5em
		&:before
			border-right 1px solid grey
		&:after
			border-left 1px solid grey

[card~="radius"]
	border-radius .3em
	overflow hidden

[card]
	background white
	box-sizing border-box
	box-shadow #b0bec5 0 .75px 2px
	display flex
	flex-direction column
	margin 1em
	header
		display flex
		padding .5em
		img
			border 2px dashed white
			border-radius 50%
			margin-right 1em
			height 3em
			width 3em
		div
			display flex
			flex-direction column
			justify-content space-around
			margin .3em 0
	img
		transition all 1s ease
		&:hover
			filter blur(5px)
			&+h3
				display none
		width 100%
		object-fit cover

		&+h3
			color white
			text-shadow 0 0 2px black
			margin .5em
			margin-top -1.5em
	h3
		line-height 1em
		margin 1em
		text-align center
	figcaption
		margin 0
		padding 1em
	[buttons]
		display flex
		button::-moz-focus-inner
			border 0
		a,button
			padding 0
			justify-content center
			flex 1 1 auto
			font 1em/3em Roboto
			outline none
			border none
			transition all 1s
			background-color trasparent
			&:hover,&:focus
				outline none

	[buttons~="3D"]
		a,button
			background-image linear-gradient(rgba(white,.1),rgba(black,.1))
			transition all 1s ease
			&:hover,&:focus
				background-image linear-gradient(rgba(black,.1),rgba(white,.1))
	[buttons~="border"]
		a,button
			box-shadow 0 -1px 0 0 rgba(black,.1),
					inset 0 1px 0 0 rgba(white,.1),
					inset 0 -1px 0 0 rgba(black,.1),
					0 1px 0 0 rgba(white,.1)
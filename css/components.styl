body
	font-family Roboto,sans-serif

[StickyFooter]
	display flex
	&,/html
		height 100%
		margin 0
	flex-direction column
	&>header,&>footer
		flex none
		line-height 3em
		padding 0 1em
		text-align center
	main
		flex 1

[buttons]
	display inline-flex
	&>*:not(:first-child)
		border-top-left-radius 0
		border-bottom-left-radius 0
	&>*:not(:last-child)
		border-top-right-radius 0
		border-bottom-right-radius 0
	
[buttons~="full"]
	display flex
	&>a,&>button
		justify-content center
		flex 1 1 auto
label
	input
		background-color transparent
		border 0

a,button,[label]
	font 1em/2em Roboto
	display inline-flex
	align-items center
	padding 0 .5em
	border 0
	text-decoration none
	text-transform uppercase
	&:before
		content attr(before)
		padding-right .25em
	&:after
		content attr(after)
		padding-left .25em
	&:before,&:after
		font-family 'Material Icons'
		font-size 1.3em
		text-transform lowercase

form
	display flex
	[label~="button"]
		background-image linear-gradient(rgba(white,.1),rgba(black,.1))
	[label]
		border-radius .3em
		&:not(:first-child)
			border-top-left-radius 0
			border-bottom-left-radius 0
		&:not(:last-child)
			border-top-right-radius 0
			border-bottom-right-radius 0
		display flex
		font 1em/3em Roboto
		input
			flex 1
			background-color inherit
			color inherit
			font inherit
			flex 1
			padding 0 .5em
			&[type="submit"]
				font-family 'Material Icons'
				button::-moz-focus-inner
					border 0
		&[before]:before
			padding-left .5em
		&:not([before]:before)
			padding-left 0
		&[after]:after
			padding-right .5em
		&:not([after]:after)
			padding-right 0


[input]
	display flex
	align-items center
	border-radius .2em
	background white
	margin 1em
	overflow hidden
	&:before
		content attr(before)
		font-family 'Material Icons'
		font-size 1.5em
		text-transform lowercase
	&[before]:before
		padding-left .75em
	&:not([before]:before)
		padding-left 0
	input
		font 1em/3em Roboto
		border none
		padding 0 1em
	input[type="text"]
		flex 1
		background-color inherit
		color inherit
	input[type="submit"]
		transition all 1s ease
		background-image linear-gradient(rgba(white,.1),rgba(black,.1))
	input[type="submit"]:hover,input[type="submit"]:focus
		background-image linear-gradient(rgba(black,.1),rgba(white,.1))
	input[type="submit"]::-moz-focus-inner
		border none

[card~="radius"]
	border-radius .3em
	overflow hidden

[card]
	background white
	box-sizing border-box
	box-shadow #b0bec5 0 .75px 2px
	display flex
	flex-direction column
	margin 1em
	header
		color white
		display flex
		padding .5em
		text-shadow 0 0 2px black
		z-index 1
		img
			border .1em dashed white
			border-radius 50%
			margin-right 1em
			height 3em
			width 3em
		div
			display flex
			flex-direction column
			justify-content space-around
			line-height 1em
			margin .3em 0
		&+img
			margin-top -4.2em
			transition all .5s ease
			z-index 1
			&+h3
				z-index 1
			&:hover
				filter blur(3px)
				z-index 0
				&+h3
					display none
		&:hover+img
			margin-top -4.2em
			transition all .5s ease
			width 100%
			object-fit cover
			z-index 1
			&+h3
				z-index 1
			&
				filter blur(3px)
				z-index 0
				&+h3
					display none
		&+img+h3:hover
			display none
	img
		object-fit cover
		&+h3
			color white
			text-shadow 0 0 2px black
			margin-top -1.5em
	h3
		line-height 1em
		margin .5em
		text-align center
	figcaption
		margin 0
		padding 1em

[buttons]
	display flex
	button::-moz-focus-inner
		border 0
	a,button
		transition all .5s ease
		justify-content center
		flex 1 1 auto
		font 1em/3em Roboto
		outline none
		border none
		background-color trasparent
		&:active
			font 1em/3em Roboto
			border-radius .2em
			transform scale(.85)
		&:hover,&:focus
			outline none

[buttons~="3D"]
	a,button
		background-image linear-gradient(rgba(white,.1),rgba(black,.1))
		&:hover,&:focus,&:active
			background-image linear-gradient(rgba(black,.1),rgba(white,.1))
[buttons~="border"]
	a,button
		box-shadow 0 -1px 0 0 rgba(black,.1),
				inset 0 1px 0 0 rgba(white,.1),
				inset 0 -1px 0 0 rgba(black,.1),
				0 1px 0 0 rgba(white,.1)
input[type="text"]:invalid
	box-shadow none
	&~input[type="submit"]
		opacity .5